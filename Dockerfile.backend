# Build stage: clone backend repo and build with Maven
FROM maven:3.9.5-eclipse-temurin-21 AS build

RUN apt-get update && apt-get install -y git

WORKDIR /app

RUN git clone https://github.com/seshasaikrishnachanumolu/cicd-project-backend.git .

RUN mvn clean package -DskipTests

# Runtime stage: run the built jar
FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

COPY --from=build /app/target/SDPProject-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8086

ENTRYPOINT ["java", "-jar", "app.jar"]
